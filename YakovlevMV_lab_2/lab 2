#include <iostream>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	const int num = 10;
	int arr[num], min = 32767, max = -32767, nechet[num], kolich = 0;
	float summ = 0;
	for (int i = 0; i < num; i++) {
		arr[i] = rand() % 100;
		cout << arr[i] << "\t";
		nechet[i] = -32767;
	}
	int i = 1, t = 0;
	while (i != num) {
		for (int j = 0; j < num; j++)
		{
			if (arr[i] < arr[j])
			{
				t = arr[i];
				arr[i] = arr[j];
				arr[j] = t;
			}
		}
		i++;
	}
	cout << endl;
	cout << "После сортировки: ";
	for (int i = 0; i < num; i++) {
		cout << arr[i] << "\t";
		
	}
	cout << endl;
	for (int i = 0; i < num; i++) {
		if (arr[i] % 2 != 0) {
			nechet[i] = arr[i];
		}
	}
	cout << "Второй массив: ";
	for (int i = 0; i < num; i++) {
		if (nechet[i] != -32767) {
			cout << nechet[i] << "\t";
			summ = summ + nechet[i];
			if (nechet[i] <= min) min = nechet[i];
			if (nechet[i] >= max) max = nechet[i];
			kolich++;
		}
	}
	cout << endl;
	cout << "Среднее значение: " << summ / kolich << endl;
	cout << "Минимальный элемент: " << min << endl;
	cout << "Максимальный элемент: " << max;
}
